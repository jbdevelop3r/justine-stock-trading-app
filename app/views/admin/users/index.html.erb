<h1>Pending Traders</h1>
<table class="table" id="admin-user-table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Approval</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= user.account_status %></td>
      <td>
        <%= link_to "Show", admin_user_path(user.id) %> 
        <%= link_to "Edit", edit_admin_user_path(user.id) %> 
        <%= link_to "Delete", admin_user_path(user.id), method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
    <% end %>
</table>

