<h1>All Users</h1>
<h1><%= link_to "Transactions", admin_transactions_path %></h1>
<%= link_to "Create User", new_admin_user_path %>

<table>
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Role</th>
        <th>Approved</th>
        <th>Action</th>
    </tr>

    <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.account_status %></td>
            <td>
                <%= link_to "Show", admin_user_path(user.id) %> |
                <%= link_to "Edit", edit_admin_user_path(user.id) %> |
                <%= link_to "Delete", admin_user_path(user.id), method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
    <% end %>
</table>