<h1>User</h1>

<table>
    <tr>
        <th>Email</th> 
        <td><%= @user.email %></td>
    </tr>
    <tr>
        <th>Role</th> 
        <td><%= @user.role %></td>
    </tr>
    <tr>
        <th>Account Status</th> 
        <td><%= @user.account_status %></td>
    </tr>
    <tr>
        <th>Action</th>
        <td><%= button_to "Edit", edit_admin_user_path(@user.id), method: :get%>
        <%= button_to "Delete", admin_user_path(@user.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
</table>

<%= link_to "Back", admin_users_path %>
