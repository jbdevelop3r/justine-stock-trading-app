<div class="">
  <section class="forgot-password-form">
  <div class="forgot-password-icon">
    <i class="bi bi-question-circle"></i>
  </div>
  <p class="forgot-password-tag"> Forgot your password? </p> 
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-75" %>
  </div>
<% end %>
<div class="d-flex justify-content-around mt-3 p-2" style="background-color: #EAEAEA; border-radius: 10px;">
      <%- if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class: "login-link" %><br />
      <% end %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Register", new_registration_path(resource_name), class: "signup-link" %><br />
      <% end %>
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation?", new_confirmation_path(resource_name), class: "didnt-receive-link" %><br />
      <% end %>
</div>
</section> 
</div>

